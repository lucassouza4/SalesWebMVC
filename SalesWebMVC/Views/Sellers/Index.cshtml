
@model IEnumerable<Seller>
@{
    ViewData["Title"] = "Sellers";
}

<div style="
    display:flex;
    align-items: center;
    justify-content: space-between;
    padding:1rem">

    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-outline-success">Create New</a>
    </p>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-success">
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.BaseSalary)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Seller seller in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelIntem => seller.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelIntem => seller.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelIntem => seller.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelIntem => seller.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@seller.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>